{
  "name": "land",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string"
    },
    "total_land": {
      "type": "number",
      "required": true
    },
    "measuring_unit": {
      "type": "string"
    },
    "acquired_date": {
      "type": "date",
      "required": true,
      "defaultFn": "$now"
    },
    "totalPayment" : {
      "type": "number",
      "required": true
    },
    "downPayment" : {
      "type": "number",
      "required": true
    },
    "discount":{
      "type": "number",
      "required": true
    },
    "isOnInstallment" : {
      "type": "boolean",
      "required": true
    },
    "landPaymentStatus": {
      "type": "string",
      "required": true,
      "default" : "notDone"
    },
    "installments": {
      "type": [
        "object"
      ]
    }
  },
  "validations": [],
  "relations": {
    "landlord": {
      "type": "belongsTo",
      "model": "landlord",
      "foreignKey": ""
    },
    "town": {
      "type": "belongsTo",
      "model": "town",
      "foreignKey": ""
    },
    "invoices": {
      "type": "hasMany",
      "model": "invoice",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "*"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "*"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "manager",
      "permission": "ALLOW",
      "property": "*"
    }
  ],
  "methods": {}
}
