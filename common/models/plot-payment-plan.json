{
  "name": "plot_payment_plan",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "hidden" : [
    "total_no_of_installment"
  ],
  "properties": {
    "payment_plan_name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "downPayment": {
      "type": "number",
      "required": true
    },
    "isMonthlyPlan": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "isYearlyPlan": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "first_payment": {
      "type": "string",
      "required": true,
      "defaultFn": "$now"
    },
    "installment_gap": {
      "type": "string",
      "required": true,
      "description": "1 Month or 1 Year, these two formats are acceptable",
      "default": "1 Month"
    },
    "total_no_of_installment": {
      "type": "number"
    },
    "total_amount": {
      "type": "number",
      "required": true
    },
    "installment_amount": {
      "type": "number",
      "required": true
    },
    "created_by": {
      "type": "string",
      "required": true,
      "default": "admin"
    },
    "created_at": {
      "type": "date",
      "required": true,
      "defaultFn": "$now"
    }
  },
  "validations": [],
  "relations": {
    "plots": {
      "type": "hasMany",
      "model": "plot",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "*"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "*"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "manager",
      "permission": "ALLOW",
      "property": "*"
    }
  ],
  "methods": {}
}
