{
  "name": "plot_payment_plan",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "payment_plan_name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "payment_plan_duration": {
      "type": "string",
      "required": true,
      "description": "1 Month or 1 Year, these two formats are acceptable",
      "default": "1 Year"
    },
    "first_payment": {
      "type": "string",
      "required": true,
      "defaultFn": "$now"
    },
    "installment_gap": {
      "type": "string",
      "required": true,
      "description": "1 Month or 1 Year, these two formats are acceptable",
      "default": "1 Month"
    },
    "total_no_of_installment": {
      "type": "number",
      "required": true,
      "default": 12
    },
    "total_amount": {
      "type": "number",
      "required": true
    },
    "installment_amount": {
      "type": "number",
      "required": true
    },
    "status": {
      "type": [
        "string"
      ]
    },
    "created_by": {
      "type": "string",
      "required": true,
      "default": "admin"
    },
    "created_at": {
      "type": "date",
      "required": true,
      "defaultFn": "$now"
    }
  },
  "validations": [],
  "relations": {},
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "*"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "*"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "manager",
      "permission": "ALLOW",
      "property": "*"
    }
  ],
  "methods": {}
}
